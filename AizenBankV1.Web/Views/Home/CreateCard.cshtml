
@{
    ViewBag.Title = "CreateCard";
}
@model AizenBankV1.Domain.Entities.Card.CardMinimal


@Html.ValidationSummary(true)
@using (Html.BeginForm("CreateCard", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <form method="post">
        <div class="container p-0">
            <div class="card px-4">
                <p class="h8 py-3">Open Card</p>
                <div class="row gx-3">
                    <label for="Credential">Name</label>
                    @Html.TextBoxFor(Card => Card.Name, new { @class = "form-control mb-3 pt-2 amount", placeholder = "Name", maxlength = "30" })
                    @Html.ValidationMessageFor(Card => Card.Name, "", new { @class = "text-danger" })

                    <label for="Password">Description</label>
                    @Html.TextBoxFor(Card => Card.Description, new { @class = "form-control mb-3 pt-2 amount", placeholder = "Description" })
                    @Html.ValidationMessageFor(Card => Card.Description, "", new { @class = "text-danger" })

                    <label for="Level">Level</label>
                    @Html.DropDownListFor(m => m.CardType, new SelectList(new[]
                    {
                        new SelectListItem { Text = "Credit", Value = "Credit" },
                        new SelectListItem { Text = "Debit", Value = "Debit" },
                    }, "Value", "Text"), new { @class = "d-flex flex-column form-control mb-3 pt-2 cardscards" })

                    <button class="col-12 btn btn-primary mb-3">Confirm</button>
                </div>
            </div>
        </div>

    </form>
}


