@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AizenBank - @ViewBag.Title</title>
    @Styles.Render("~/bundles/template/bootstrap/css")
    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/font-awesome/css")
    @Scripts.Render("~/bundles/style/js")

    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/gulpfile/js")

    @if (IsSectionDefined("Styles"))
            {
                @RenderSection("Styles", required: false)
            }

    @Styles.Render("~/bundles/main/css")
</head>
<body>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion sidebarthing" id="accordionSidebar">
            @Html.Partial("_Sidebar")
        </ul>
        <style>
            .sidebarthing{
                z-index:1;
            }
        </style>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    @Html.Partial("_Topbar")
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                    @RenderBody()
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white footerthing">
                @Html.Partial("_Footer")
            </footer>
            <!-- End of Footer -->
                <style>
                    .footerthing {
                        position: fixed;
                        left: 0;
                        bottom: 0;
                        width: 100%;
                        text-align: center;
                        z-index: 0;
                    }
                </style>
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        @Html.Partial("_LogoutModal")
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>
    <script src="https://kit.fontawesome.com/b521712646.js" crossorigin="anonymous"></script>
</body>
</body>
</html>