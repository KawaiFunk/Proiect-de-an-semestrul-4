@using System.Web.Optimization

<!-- Sidebar - Brand -->
<a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
    <div class="sidebar-brand-icon rotate-n-15">
        <i class="fas fa-laugh-wink"></i>
    </div>
    <div class="sidebar-brand-text mx-3">Aizen Bank</div>

    @Styles.Render("~/bundles/template/bootstrap/css")
    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/font-awesome/css")
    @Scripts.Render("~/bundles/style/js")

    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/gulpfile/js")

    @Styles.Render("~/bundles/main/css")
</a>

<!-- Divider -->
<hr class="sidebar-divider">

<li class="nav-item active">
    <a class="nav-link" href="@Url.Action("CardsAccounts","Home")">
        <i class="fas fa-fw fa-tachometer-alt"></i>
        <span>Personal Cards</span>
    </a>
</li>

<!-- Heading -->
<div class="sidebar-heading">
    Utilities
</div>

<!-- Nav Item - Pages Collapse Menu -->
<li class="nav-item">
    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
       aria-expanded="true" aria-controls="collapseTwo">
        <i class="fas fa-fw fa-cog"></i>
        <span>Balance Management</span>
    </a>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
            <h6 class="collapse-header">Management:</h6>
            <a class="collapse-item" href="@Url.Action("Deposit","Home")">Deposit</a>
            <a class="collapse-item" href="@Url.Action("Withdraw","Home")">Withdraw</a>
        </div>
    </div>
</li>

<!-- Nav Item - Utilities Collapse Menu -->
<li class="nav-item">
    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
       aria-expanded="true" aria-controls="collapseUtilities">
        <i class="fas fa-fw fa-wrench"></i>
        <span>Transfers</span>
    </a>
    <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
         data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
            <h6 class="collapse-header">Type of transfer:</h6>
            <a class="collapse-item" href="@Url.Action("LocalTransfer","Home")">Local Transfer</a>
            <a class="collapse-item" href="@Url.Action("Transfer","Home")">Transfer</a>
        </div>
    </div>
</li>

<!-- Divider -->
<hr class="sidebar-divider">



<!-- Nav Item - Tables -->
@if (AizenBankV1.Web.CheckAcces.IsAdmin.IsUserAdmin())
{
    <!-- Heading -->
    <div class="sidebar-heading">
        Admin acces
    </div>

    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Tables","Admin")">
            <i class="fas fa-fw fa-table"></i>
            <span>Tables</span>
        </a>
    </li>
}



<!-- Sidebar Toggle (Topbar) -->
<button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
    <i class="fa fa-bars"></i>
</button>
